                <label><input type="radio" asp-for="drowsy" value="TRUE"> Yes </label>
                <label><input type="radio" asp-for="drowsy" value="FALSE"> No </label>
            </div><hr />

            <div>
                Roadway Departure?<br />
                <label><input type="radio" asp-for="departure" value=""> No Selection </label>
                <label><input type="radio" asp-for="departure" value="TRUE"> Yes </label>
                <label><input type="radio" asp-for="departure" value="FALSE"> No </label>
            </div><hr />

            <button type="submit" asp-action="Summary" class="btn btn-success mb-2 w-100">Filter</button>

        </form>
    </div>

    <div class="text-center col-9">
        <h1 class="display-4">Utah Collision Incidents</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Crash ID</th>
                    <th>Date</th>
                    <th>Route</th>
                    <th>Milepoint</th>
                    <th>Main Road Name</th>
                    <th>City</th>
                    <th>County</th>
                    <th>Crash Severity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Crashes)
                {
                    <tr>
                        <td>@x.CRASH_ID</td>
                        <td>@x.CRASH_DATETIME</td>
                        <td>@x.ROUTE</td>
                        <td>@x.MILEPOINT</td>
                        <td>@x.MAIN_ROAD_NAME</td>
                        <td>@x.CITY</td>
                        <td>@x.COUNTY_NAME</td>
                        <td>@x.CRASH_SEVERITY_ID</td>
                    </tr>
                }
            </tbody>

        </table>

        <div class="row">
            <div class="col text-right">
                <div page-yeah="@Model.PageInfo" page-action="Summary" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"></div>

            </div>

           
            
            <div class="col text-left">
                <form method="get">

                    <input asp-for="pageNum" class="form-control w-25" />
                    <button type="submit" asp-action="Summary" class="btn"></button>

                </form>
            </div>
        </div>

    </div>
</div>